extends layout 

block content 
  .title  
    h1.title__h1 Change Password 

  .line

  if errorMessage 
    span=errorMessage
  
  .form
    form(method="POST") 
      .form__input
        input(type="password", name="old", placeholder="Old Password").form__input-text
      .form__input
        input(type="password", name="newPass", placeholder="New Password").form__input-text
      .form__input
        input(type="password", name="newConfirm", placeholder="Confrim New Password").form__input-text
      input(type="submit", value="Update").form__btn